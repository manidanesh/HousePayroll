{
  "name": "household-payroll",
  "version": "1.0.0",
  "description": "A personal payroll application for household employers to manage caregiver payroll while maintaining compliance with U.S. federal and Colorado employment requirements.",
  "main": "dist/main.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build:renderer": "webpack --mode production",
    "build:main": "tsc src/main/main.ts --outDir dist",
    "build": "npm run build:renderer && npm run build:main",
    "start": "webpack && electron dist/main.js",
    "dev:renderer": "webpack serve --mode development",
    "dev": "NODE_ENV=development webpack && electron dist/main.js",
    "package": "electron-builder --mac",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "payroll",
    "household",
    "caregiver",
    "tax"
  ],
  "author": "manidanesh",
  "license": "ISC",
  "build": {
    "appId": "com.household.payroll",
    "productName": "Household Payroll",
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.png"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    }
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.3",
    "@types/pdfkit": "^0.17.4",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "css-loader": "^7.1.2",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "html-webpack-plugin": "^5.6.5",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.5.0",
    "pdfkit": "^0.17.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  }
}