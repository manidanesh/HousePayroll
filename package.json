{
  "name": "household-payroll",
  "version": "1.0.2",
  "description": "A personal payroll application for household employers to manage caregiver payroll while maintaining compliance with U.S. federal and Colorado employment requirements.",
  "main": "dist/main/main.js",
  "scripts": {
    "build:renderer": "webpack --mode production",
    "build:main": "tsc --project tsconfig.main.json",
    "build": "npm run build:main && npm run build:renderer",
    "start": "npm run build && electron dist/main/main.js",
    "dev:renderer": "webpack serve --mode development",
    "dev": "npm run build && electron dist/main/main.js",
    "package": "electron-builder --mac",
    "test": "npm rebuild better-sqlite3 && jest",
    "test:post": "electron-builder install-app-deps",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "payroll",
    "household",
    "caregiver",
    "tax"
  ],
  "author": "manidanesh",
  "license": "ISC",
  "build": {
    "appId": "com.household.payroll",
    "productName": "Household Payroll",
    "publish": [
      {
        "provider": "github",
        "owner": "manidanesh",
        "repo": "HousePayroll"
      }
    ],
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "identity": "Mani Danesh (3CXZWALQ26)"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    }
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/bcryptjs": "^3.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@types/pdfkit": "^0.17.4",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "css-loader": "^7.1.2",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "html-webpack-plugin": "^5.6.5",
    "jest": "^30.2.0",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "adm-zip": "^0.5.16",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.6.2",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.7.3",
    "jspdf": "^4.0.0",
    "pdfkit": "^0.17.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hot-toast": "^2.6.0",
    "recharts": "^3.6.0",
    "stripe": "^20.1.1",
    "zustand": "^5.0.9"
  }
}
